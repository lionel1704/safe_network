name: Testing
on: [pull_request]

jobs:
  test:
    runs-on: ${{ matrix.os }}
    strategy:
      fail-fast: false
      matrix:
        os: [windows-latest]
    steps:
      - name: Remove pre-installed rustup
        run: rustup self uninstall -y
        continue-on-error: true
      - name: Reproduce failing step
        uses: actions-rs/toolchain@v1
        continue-on-error: true
        with:
            toolchain: stable
      - name: Fork that does not fail
        uses: lionel1704/toolchain@master
        with:
            toolchain: stable